<Window x:Class="WpfDip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDip"
        mc:Ignorable="d"
        Title="Работа с задачами" Height="550" Width="1000" MinWidth="1000" MinHeight="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="210"></ColumnDefinition>
            <ColumnDefinition> </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgAll" Margin="30,10,30,70" Grid.Column="1"  Grid.Row="1">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn x:Name="CheckBox"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btView" Content="Отобразить" Margin="0,0,341,22" Width="90" Height="34" Background="{StaticResource GrayBlueGradientBrush}" Click="btView_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="btExportCSV" Content="CSV" Margin="0,0,215,24" Width="90" Height="34" Background="{StaticResource GrayBlueGradientBrush}" Click="btCSV_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="btExportJSON" Content="JSON" Margin="0,0,40,24" Width="90" Height="34" Background="{StaticResource GrayBlueGradientBrush}" Click="btJSON_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="btDel" Content="Удалить" Margin="0,0,470,22" Width="90" Height="34" Background="{StaticResource GrayBlueGradientBrush}" Click="btDel_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="tbPathCSV" Margin="0,0,225,58" TextWrapping="Wrap" Width="75" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="tbPathJSON"  Margin="0,0,48,58" TextWrapping="Wrap" Width="74" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1"/>
        <CheckBox x:Name="cbSummary" Content="Аннотация" Grid.Column="0" Margin="10,30,58,398" Grid.Row="1"/>
        <CheckBox x:Name="cbKey" Content="Ключ" Grid.Column="0" Margin="10,54,58,374" Grid.Row="1"/>
        <CheckBox x:Name="cbPriority" Content="Приоритет" Grid.Column="0" Margin="10,78,58,350" Grid.Row="1"/>
        <CheckBox x:Name="cbStatus" Content="Статус" Grid.Column="0" Margin="10,102,58,326" Grid.Row="1"/>
        <CheckBox x:Name="cbType" Content="Тип" Grid.Column="0" Margin="10,126,58,302" Grid.Row="1"/>
        <CheckBox x:Name="cbCreated" Content="Время создания" Grid.Column="0" Margin="10,150,58,278" Grid.Row="1"/>
        <CheckBox x:Name="cbEnvironment" Content="Окружение" Grid.Column="0" Margin="10,174,58,254" Grid.Row="1"/>
        <CheckBox x:Name="cbProject" Content="Проект" Grid.Column="0" Margin="10,198,58,229" Grid.Row="1"/>
        <CheckBox x:Name="cbAssigneeUser" Content="Создатель" Grid.Column="0" Margin="10,223,58,205" Grid.Row="1"/>
        <CheckBox x:Name="cbReporterUser" Content="Испольнитель" Grid.Column="0" Margin="10,247,58,181" Grid.Row="1"/>
        <CheckBox x:Name="cbParamCount" Content="Счётчик переходов параметров" Grid.Column="0" Margin="10,271,0,157" Grid.Row="1"/>
        <CheckBox x:Name="cbParamFilter" Content="Фильтр по переходам параметров" Grid.Column="0" Margin="10,295,565,133" Grid.Row="1" Grid.ColumnSpan="2" />
        <Label x:Name="lbTable" Content="Таблица задач" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" Margin="220,13,220,0" VerticalAlignment="Stretch" Background="Transparent" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lbParam" Content="Параметры" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" Margin="10,0,10,0" VerticalAlignment="Center" Background="Transparent" FontSize="20"/>
    </Grid>

</Window>
